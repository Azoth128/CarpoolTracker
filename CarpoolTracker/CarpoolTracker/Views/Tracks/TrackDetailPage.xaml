<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarpoolTracker.Views.Tracks.TrackDetailPage"
             xmlns:models="clr-namespace:CarpoolTracker.Models"
             xmlns:viewModels="clr-namespace:CarpoolTracker.ViewModels.Tracks"
             x:DataType="viewModels:TrackDetailViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditTrackCommand}" />
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="5" Padding="15">
        <Label Margin="0, 0, 0, 0" Text="Name" FontSize="Small" />
        <Label Margin="0, 0, 0, 5"  Text="{Binding Name}" FontSize="Large" />

        <Label Text="Distance" FontSize="Small" />
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding Distance}" FontSize="Large" />
            <Label Text="km" FontSize="Large" />
        </StackLayout>
    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarpoolTracker.Views.People.PersonDetailPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:CarpoolTracker.ViewModels.People"
             x:DataType="local:PersonDetailViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditPersonCommand}" />
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="20" Padding="15">
        <Label Margin="0, 0, 0, -15" Text="Name:" FontSize="Small" />
        <Label Margin="0, 0, 0, 0" Text="{Binding Name}" FontSize="Large" />
        <Label Margin="0, 0, 0, -15" Text="Surname:" FontSize="Small" />
        <Label Margin="0, 0, 0, 0" Text="{Binding Surname}" FontSize="Large" />
        <Label Margin="0, 0, 0, -10" Text="Color:" FontSize="Small" />
        <Frame Margin="0, 0, 0, 0" BackgroundColor="{Binding Color}"></Frame>
    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarpoolTracker.Views.Calendar.CalendarPage"
             xmlns:calendar="clr-namespace:Xamarin.Plugin.Calendar.Controls;assembly=Xamarin.Plugin.Calendar"
             xmlns:viewModel="clr-namespace:CarpoolTracker.ViewModels.Calendar"
             x:DataType="viewModel:CalendarViewModel"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <calendar:Calendar Events="{Binding Events}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>